create table lsj_order(
    order_id string,
    amount string,
    user_name string
)
row format delimited fields terminated by ',' lines terminated by '\n';

create table lsj_item(
    order_id string,
    price string,
    product string,
    item_id string
)
row format delimited fields terminated by ',' lines terminated by '\n';

create table lsj_item_delivery(
    order_id string,
    item_id string,
    status string
)
row format delimited fields terminated by ',' lines terminated by '\n';

hive> load data local inpath '/home/dev/hive/order' overwrite into table lsj_order;
hive> load data local inpath '/home/dev/hive/item' overwrite into table lsj_item;
hive> load data local inpath '/home/dev/hive/delivery' overwrite into table lsj_item_delivery;
hive> add jar hdfs:////jiarong/hive/tmp/hive-data-demo-1.0-SNAPSHOT.jar
hive> create temporary function toUpper as 'lishijia.data.hive.UpperCassUDF';
hive> show functions;
hive> select toupper(product) from lsj_item;